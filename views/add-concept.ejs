<%- include('./partials/head') %>
<body>
    <%- include('./partials/nav.ejs') %>
    <header>
        <div class="width-container">
            <h1>Poll toevoegen</h1>
        </div>
    </header>
    <main>
        <div class="width-container">
            <form method="POST">
                <fieldset>
                    <label class="h2" for="title">Titel</label>
                    <input
                        class="form-validate"
                        type="text"
                        name="title"
                        id="title"
                        value="<%= conceptPoll.title ? conceptPoll.title : '' %>"
                        placeholder="Type je vraag hier"
                        required
                    />
                    <label class="h2" for="answer1">Antwoorden</label>
                    <ul class="answer-container">
                        <li>
                            <input
                                class="form-validate"
                                value="<%= conceptPoll.answers[0] ? conceptPoll.answers[0] : '' %>"
                                type="text"
                                name="answers"
                                id="answer1"
                                required
                                placeholder="Antwoord 1"
                            />
                        </li>
                        <li>
                            <input
                                class="form-validate"
                                value="<%= conceptPoll.answers[1] ? conceptPoll.answers[1] : '' %>"
                                type="text"
                                name="answers"
                                id=""
                                required
                                placeholder="Antwoord 2"
                            />
                        </li>
                        <% if (conceptPoll.answers[2]) { %>
                        <li>
                            <input
                                class="form-validate"
                                value="<%= conceptPoll.answers[2] %>"
                                type="text"
                                name="answers"
                                id=""
                                required
                                placeholder="Antwoord 3"
                            />
                        </li>
                        <% } else { %>
                        <li class="js-hide">
                            <input class="form-validate" type="text" name="answers" placeholder="Antwoord 3" />
                        </li>
                        <% }%> <% if (conceptPoll.answers[3]) { %>
                        <li>
                            <input
                                class="form-validate"
                                value="<%= conceptPoll.answers[3] %>"
                                type="text"
                                name="answers"
                                id=""
                                required
                                placeholder="Antwoord 4"
                            />
                        </li>
                        <% } else { %>
                        <li class="js-hide">
                            <input class="form-validate" type="text" name="answers" placeholder="Antwoord 4" />
                        </li>
                        <% }%> <% if (conceptPoll.answers[4]) { %>
                        <li>
                            <input
                                class="form-validate"
                                value="<%= conceptPoll.answers[4] %>"
                                type="text"
                                name="answers"
                                id=""
                                required
                                placeholder="Antwoord 5"
                            />
                        </li>
                        <% }else { %>
                        <li class="js-hide">
                            <input class="form-validate" type="text" name="answers" placeholder="Antwoord 5" />
                        </li>
                        <% }%> <% if (conceptPoll.answers[5]) { %>
                        <li>
                            <input
                                class="form-validate"
                                value="<%= conceptPoll.answers[5] %>"
                                type="text"
                                name="answers"
                                id=""
                                required
                                placeholder="Antwoord 6"
                            />
                        </li>
                        <% } else { %>
                        <li class="js-hide">
                            <input class="form-validate" type="text" name="answers" placeholder="Antwoord 6" />
                        </li>
                        <% }%>
                    </ul>
                    <div class="add-remove-buttons hidden">
                        <button id="add-answer" type="button" class="btn">Extra antwoord</button>
                        <button id="remove-answer" type="button" class="btn">Verwijder antwoord</button>
                    </div>
                </fieldset>
                <label class="checkbox-label"><input type="checkbox" name="multiple" id="" />Meerdere antwoorden mogelijk?</label>
                <div class="submit-buttons">
                    <button class="btn btn-prim" type="submit" formaction="/add-poll">Maak aan</button>
                    <button class="btn" id="remove-concept" type="submit" formaction="/delete-concept/<%= conceptPoll.id %>" formnovalidate>
                        Verwijder concept
                    </button>
                </div>
            </form>
        </div>
    </main>
    <script defer src="/js/main.js"></script>
</body>
<%- include('./partials/foot') %>
